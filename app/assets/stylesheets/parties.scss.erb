@import url(https://fonts.googleapis.com/css?family=Roboto+Condensed:700,400,300);
@import url(https://fonts.googleapis.com/css?family=Lato);


body {
	max-height: 300em;
	background: image-url("finland-background.jpg");
	background-size: cover;
	background-attachment: fixed;
}

h1 {
	font-family: 'Roboto Condensed', sans-serif;
	font-weight: 700;
}

a.navlinks {
	padding: 0.50em;
	top: 0px;
	text-decoration: none;
	font-family: 'Lato', sans-serif;
	font-weight: 300;
	text-align: right;
}

.info {
	max-height: 100%;
	background-color: white;
	margin: 8em 9em 6em 9em;
	height: 100%;
	box-shadow: 3px 6px 23px #707070; 
	font-family: 'Lato', sans-serif;
	font-weight: 400;
	text-align: center;
	border-radius: 3px;
	overflow: auto;
	border-radius: 1%;
}

img.homeflag {
	max-width: 200px;
}

.navbar {
	position: fixed;
	background: whitesmoke;
	width: 100%;
	height: 6em;
	top: 0px;
	left: 0px;
	font-size: 18px;
	box-shadow: -1px 3px 19px #707070;
	z-index: 999999;
}

.smallthumb {
  width: 65px;
  height: 65px;
  overflow: hidden;
  display: inline-block;
}

.map-canvas {
	width: 500px;
	height: 500px;
}

.smallthumb img {
  max-height: 65px;
}

img.miniflag {
	max-height: 107.5px;
	text-align: left;
	display: inline-block; 
  	vertical-align:middle;
}

div a.navlinks:link {
	color: rgb(0, 53, 128);
}

div a.navlinks:visited {
	color: rgb(0, 53, 128);
}

.thumb {
	max-width: 15em;
	width: 100%;
	border-radius: 3%;
}

.chart-area {
	width: 100px;
	height: 100px;
}

.polindex {
	max-width: 8em;
	width: 100%;
	border-radius: 30%;
}

div.panel {
	position: relative;
	display: inline-block;
	width: 33%;
}

div.panel * {
  	max-width: 100%;
  	max-height: 230px;
}

div.homelink {
	position: absolute;
	top: 0;
	left: 0;
	background: rgba( 255, 255, 255, 0.7 );
	width: 100%;
	-webkit-transition: all 0.5s;
	transition: all 0.5s;
	height: 30%;
}

div.homelink h3 {
  	bottom: 0;
  	left: 0;
}

div.homelink a:link {
	color: rgb(0, 53, 128);
}

div.homelink a:visited {
	color: rgb(0, 53, 128);
}

div.panel:hover div.homelink {
  	height: 100%;
}

div.navlinks {
	display: inline-block; 
    vertical-align: middle;
}

.link-spanner {
	position: absolute; 
	width: 100%;
	height: 100%;
	top: 0;
	left: 0;
	z-index: 1;
}

a.navlinks:hover {
	text-decoration: underline;
}

div.homelinker {
	position: absolute;
	top: 16px;
	left: 0;
	background: rgba( 255, 255, 255, 0.7 );
	width: 100%;
	-webkit-transition: all 0.5s;
	transition: all 0.5s;
	height: 30%;
}


div.homelinker h3 {
  	bottom: 0;
  	left: 0;
}

div.homelinker a:link {
	color: rgb(0, 53, 128);
}

div.homelinker a:visited {
	color: rgb(0, 53, 128);
}

div.panel:hover div.homelinker {
  	height: 100%;
}

.branch-text {
	text-align: center;
	width: 50%;
	margin: 0 auto;
}





