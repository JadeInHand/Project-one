@import url(https://fonts.googleapis.com/css?family=Roboto+Condensed:700,400,300);


body {
	background: linear-gradient(to bottom, rgba(0, 53, 128, 1),  rgba(0, 0, 0, 0));
	max-height: 300em;
	background-size: 100%;
}

h1 {
	font-family: 'Roboto Condensed', sans-serif;
	font-weight: 700;
}

a.navlinks {
	padding: 0.50em;
	top: 0px;
	text-decoration: none;
	font-family: 'Roboto Condensed', sans-serif;
	font-weight: 300;
}

.info {
	max-height: 100vh;
	background-color: white;
	margin: 10em 10em 10em 10em;
	height: 100vh;
	padding: 3em;
	box-shadow: 3px 6px 23px #707070; 
	font-family: 'Roboto Condensed', sans-serif;
	font-weight: 400;
	text-align: center;
	border: 1px solid black;
	border-radius: 13.65px;
	overflow: auto;
}

img.homeflag {
	max-width: 200px;
}

.navbar {
	position: fixed;
	background-image: image-url("navbar-pattern.jpg");
	width: 100%;
	height: 35px;
	top: 0px;
	left: 0px;
	color: white;
	font-size: 18px;
	box-shadow: -1px 3px 19px #707070;
	text-align: left;
}

img.miniflag {
	max-height: 35.5px;
	text-align: left;
}

.navlinks:link {
	color: white;
}

.navlinks:visited {
	color: white;
}

.thumb {
	max-width: 15em;
	width: 100%;
	border-radius: 35%;
}

.chart-area {
	width: 100px;
	height: 100px;
}


