<div class="info">
	<h1><%= raw @politician.name %></h1>	
	<h3> <%= link_to "#{ @politician.role }", branch_path(@politician.branch_id) %> </h3>
	<p> <%= image_tag @politician.image, :class => "thumb" %> </p>
	<p> <%= raw @politician.previous_works %> </p>
	<p> <%= @politician.location %> </p>

	<% unless @politician.party.nil? %>
		<h2> <%= @politician.name %> is a party of the <%= link_to "#{ @politician.party.name }", party_path(@politician.party_id) %>:</h2>
		<p> 
		<%= link_to (image_tag "#{@politician.party.emblem}", :class => "polindex"), party_path(@politician.party_id) %> 
		</p>
	<% end %>
	<p>
		<%= link_to 'Edit', edit_politician_path %>
		<%= button_to('Delete', politician_path(@politician.id), :method => 'delete') %>
	</p>
</div>



