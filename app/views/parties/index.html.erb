<div class="info">
	<h1>All Parties</h1>
	<div id="canvas-holder">
		<h2>Seats in <%= link_to "Cabinet", branch_path(@parliament) %></h2>
		<canvas id="party-area"/>
	</div>
	<div id="canvas-holder">
		<h2>Total Membership by Party</h2>
		<canvas id="membership-area"/>
	</div>

	<h1>Parties and their Emblem's</h1>
	<% @parties.order(:id).each do |party| %>
		<% if party.emblem? %>
			<p> <%= link_to (image_tag "#{ party.emblem }", :class => "thumb" ), party_path(party.id) %> </p>
			<p> <%= link_to "#{ party.name }", party_path(party.id) %> </p>
		<% else %>
			<p> <%= link_to "#{ party.name }", party_path(party.id) %> </p>
		<% end %>
	<% end %>
</div>
