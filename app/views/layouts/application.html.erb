<!DOCTYPE html>
<html>
<head>
  <title>Finnish Governance</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="navbar">
	<nav>
		<div class="links">
			<%= image_tag "Flag_of_Finland.svg.png", :class => "miniflag" %>
			<div class="navlinks">
				<a><%= link_to 'Home', '/', :class =>"navlinks" %></a>
				<a><%= link_to 'Parliament', branches_path, :class =>"navlinks" %></a>
				<a><%= link_to 'Politicians', politicians_path, :class =>"navlinks" %></a>
				<a><%= link_to 'Parties', parties_path, :class =>"navlinks" %></a>
				<% if @current_user && @current_user.admin? %>
					<a><%= link_to 'New Party', new_party_path, :class =>"navlinks" %></a>
					<a><%= link_to 'Create Politician', new_politician_path, :class =>"navlinks" %></a>
					<a><%= link_to 'Create Branch', new_branch_path, :class =>"navlinks" %></a>
				<% end %>
				<% if @current_user && @current_user.present? %>
					<%= link_to "Edit Profile", edit_user_path( @current_user ), :class => "navlinks" %>
					<%= link_to "Logout #{ @current_user.name }", login_path, :method => 'delete', :class => "navlinks" %>
				<% end %>
			</div>
		</div>
	</nav>
</div>
<%= yield %>

</body>
</html>
